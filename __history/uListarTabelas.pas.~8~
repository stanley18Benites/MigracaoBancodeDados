unit uListarTabelas;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.StdCtrls, Vcl.Grids,FireDac.Comp.Client,
  Vcl.DBGrids;

type
  TfrmConsulta = class(TForm)
    gBoxSaida: TGroupBox;
    DBGrid5: TDBGrid;
    DBGrid1: TDBGrid;
    gBoxEntrada: TGroupBox;
    DBGrid2: TDBGrid;
    DBGrid3: TDBGrid;
    btMigrar: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    procedure btMigrarClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
   procedure TCriar(obg : TFDConnection);
  end;

var
  frmConsulta: TfrmConsulta;

implementation
{$R *.dfm}
uses uMenu, uClasseBuscarTabelas ;
procedure TfrmConsulta.btMigrarClick(Sender: TObject);
begin
//
end;

procedure TfrmConsulta.FormCreate(Sender: TObject);
var obj : UTabelas ;
begin
  try
    obj := uTabelas.Create ;
  finally
    FreeAndNil(obj);
  end;
end;

procedure TfrmConsulta.TCriar(obg : TFDConnection);
begin
  try
    frmConsulta := TfrmConsulta.Create(nil);
    frmConsulta.ShowModal;
  finally
    frmConsulta.Free;
  end;
end;

end.
